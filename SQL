create database rezeptbuch;
use rezeptbuch;
CREATE TABLE users (
    ID BIGINT NOT NULL auto_increment primary key,
    mail varchar(255) unique,
    lastName TINYTEXT,
    firstName TINYTEXT,
    password TINYTEXT,
    description TEXT
);
create table recipes(
    ID BIGINT NOT NULL auto_increment,
    name TINYTEXT not null,
    creator BIGINT NOT NULL,
    description TEXT not null,
    durationPreparation INTEGER,
    durationCooking INTEGER,
    difficulty INTEGER,
    ratingCount INTEGER,
    ratingSum INTEGER,
    servings INTEGER,
    image BLOB,
    filename varchar(255),
    created timestamp default current_timestamp,
    modified timestamp on update current_timestamp default current_timestamp,
    primary key (ID),
    foreign key (creator) references users(id)
    );

create table ingredients(
	recipe bigint,
    ingredient varchar(255),
    unit varchar(20),
    quantity integer,
    foreign key (recipe) references recipes(id)
    );
    
create table ratings(
	recipe bigint,
    evaluator bigint,
    rating INTEGER,
    primary key (recipe,evaluator),
    foreign key (recipe) references recipes(id),
    foreign key (evaluator) references users(id)
    );
 
create table comments(
    ID BIGINT NOT NULL auto_increment,
    recipe bigint,
    comment text not null,
    author bigint,
    primary key (ID),
    foreign key (recipe) references recipes(id),
    foreign key (author) references users(id)
    );
    
create table abos(
	recipe bigint,
    user bigint,
    foreign key (recipe) references recipes(id),
    foreign key (user) references users(id),
    primary key (recipe, user)
    );


/* Rezeptview f√ºr die Suchfunktion */
CREATE VIEW v_rezeptuser AS
	SELECT
        u.ID AS authorid,
        u.lastName AS authorlastname,
        u.firstName AS authorfirstname,
        r.ID AS recipeid,
        r.name AS recipename,
        r.description AS description,
        r.durationPreparation AS durationPreparation,
        r.durationCooking AS durationCooking,
        r.difficulty AS difficulty,
        r.servings AS servings,
        r.image AS image,
        r.filename AS filename,
        i.ingredient as ingredient
    FROM
	((users u join recipes r on (u.ID = r.creator)) left join ingredients i on (r.ID = i.recipe))
    order by
    r.ID;